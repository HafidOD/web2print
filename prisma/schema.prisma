generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Property {
  id           Int       @id @default(autoincrement())
  propertyName String
  email        String
  users        User[]
  addresses    Address[]
}

model User {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  password    String
  telefono    String?
  userName    String
  propertyId  Int?
  role        Int          @default(1)
  typePrice   Int
  currency    String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  property    Property?    @relation(fields: [propertyId], references: [id])
  enterprises Enterprise[]
  addresses   Address[]
  sales       Sale[]
}

model Enterprise {
  id             Int        @id @default(autoincrement())
  enterpriseName String     @unique
  logo           String?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  users          User[]
  products       Product[]
  addresses      Address[]
  categories     Category[]
  sale           Sale[]
}

model Address {
  id           Int         @id @default(autoincrement())
  officeName   String      @unique
  address      String
  city         String
  country      String
  state        String
  postalCode   Int
  enterpriseId Int?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  propertyId   Int?
  price        Int?
  enterprise   Enterprise? @relation(fields: [enterpriseId], references: [id])
  property     Property?   @relation(fields: [propertyId], references: [id])
  users        User[]
}

model Product {
  id                 Int        @id @default(autoincrement())
  sku                String     @unique
  nameProduct        String     @unique
  imageProduct       String?
  priceLocal         Float
  priceNacional      Float?
  priceExt           Float?
  descriptionProduct String?
  stockProduct       Int?
  unitsPackage       Int
  published          Boolean    @default(false)
  enterpriseId       Int
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt
  categories         Category[]
  enterprise         Enterprise @relation(fields: [enterpriseId], references: [id])
  sales              Sale[]
}

model Category {
  id             Int          @id @default(autoincrement())
  categoryName   String       @unique
  imageCategory  String?
  parentCategory Int
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  products       Product[]
  enterprises    Enterprise[]
}

model Sale {
  id            Int         @id @default(autoincrement())
  userId        Int
  totalSale     Float
  data          Json
  address       Json
  enterpriseInt Int?
  date          DateTime
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  products      Product[]
  enterprise    Enterprise? @relation(fields: [enterpriseInt], references: [id])
  user          User        @relation(fields: [userId], references: [id])
}

model AddressToUser {
  A Int
  B Int

  @@unique([A, B], map: "_AddressToUser_AB_unique")
  @@index([B], map: "_AddressToUser_B_index")
  @@map("_AddressToUser")
}

model CategoryToEnterprise {
  A Int
  B Int

  @@unique([A, B], map: "_CategoryToEnterprise_AB_unique")
  @@index([B], map: "_CategoryToEnterprise_B_index")
  @@map("_CategoryToEnterprise")
}

model CategoryToProduct {
  A Int
  B Int

  @@unique([A, B], map: "_CategoryToProduct_AB_unique")
  @@index([B], map: "_CategoryToProduct_B_index")
  @@map("_CategoryToProduct")
}

model EnterpriseToUser {
  A Int
  B Int

  @@unique([A, B], map: "_EnterpriseToUser_AB_unique")
  @@index([B], map: "_EnterpriseToUser_B_index")
  @@map("_EnterpriseToUser")
}

model ProductToSale {
  A Int
  B Int

  @@unique([A, B], map: "_ProductToSale_AB_unique")
  @@index([B], map: "_ProductToSale_B_index")
  @@map("_ProductToSale")
}
